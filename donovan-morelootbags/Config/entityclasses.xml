<configs>
  <set xpath="/entity_classes/entity_class[starts-with(@name, 'zombieTemplate')]/property[@name='LootDropProb']/@value">.10</set>
  <set xpath="/entity_classes/entity_class[contains(@name, 'Feral')]/property[@name='LootDropProb']/@value">.2</set>
  <append xpath="/entity_classes/entity_class[contains(@name, 'Radiated')]">
    <property name="LootDropProb" value=".4"/>
  </append>

  <set xpath="/entity_classes/entity_class[@name='zombieWightFeral']/property[@name='LootDropProb']/@value">.3</set>
  <append xpath="/entity_classes/entity_class[@name='zombieWightRadiated']">
    <property name="LootDropProb" value=".6"/>
  </append>
</configs>
