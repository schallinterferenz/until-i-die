<ih_biggerhordes>
	<!-- Increase wandering horde zombie count -->
	<setattribute xpath="/hordes/horde[@type='wandering']/hordegroup[@name='Zombies']//gs/entity[not (@name='zombieScreamer' or @name='zombieScreamerFeral' or @name='zombieScreamerRadiated')]" name="maxCount">10</setattribute>
	
	<setattribute xpath="/hordes/horde[@type='wandering']/hordegroup[@name='Zombies']/gs[2]" name="countIncPerGS">0.5</setattribute>
	
	<!-- Increase scout zombie horde zombie count -->
	<setattribute xpath="/hordes/horde[@type='scout']/hordegroup//entity[not (@horde='scouts')]" name="maxCount">30</setattribute>
</ih_biggerhordes>